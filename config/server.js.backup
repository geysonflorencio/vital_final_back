// config/server.js
const express = require('express');
const cors = require('cors');
const helmet = require('helmet');

// Importa칞칚o segura do express-rate-limit
let rateLimit;
try {
  rateLimit = require('express-rate-limit');
} catch (error) {
  console.warn('丘멆잺 express-rate-limit n칚o dispon칤vel, usando fallback');
  rateLimit = () => (req, res, next) => next(); // fallback middleware
}

// Middlewares customizados
const { requestLogger } = require('../middleware/logger');
const { errorHandler } = require('../middleware/errorHandler');
const { validateRequest } = require('../middleware/validation');

function createServer() {
  const app = express();

  // Seguran칞a b치sica
  app.use(helmet({
    contentSecurityPolicy: false, // Desabilitar para desenvolvimento
    crossOriginEmbedderPolicy: false
  }));

  // CORS configurado para produ칞칚o
  const allowedOrigins = [
    'http://localhost:3000',
    'http://localhost:3001', 
    'https://vital-deploy.vercel.app',
    'https://vital-deploy-backend.vercel.app',
    'https://www.appvital.com.br'
  ];

  app.use(cors({
    origin: function (origin, callback) {
      // Permitir requisi칞칫es sem origin (ex: mobile apps, Postman)
      if (!origin) return callback(null, true);
      
      if (allowedOrigins.indexOf(origin) !== -1) {
        callback(null, true);
      } else {
        console.log('游뛂 Origin n칚o permitida:', origin);
        // callback(new Error('Not allowed by CORS'));
        callback(null, true); // Permitir todas temporariamente para debug
      }
    },
    credentials: true,
    methods: ['GET', 'POST', 'PUT', 'DELETE', 'PATCH', 'OPTIONS'],
    allowedHeaders: ['Content-Type', 'Authorization', 'X-Requested-With'],
    optionsSuccessStatus: 200 // Para suporte a browsers legados
  }));

  // Debug CORS tempor치rio
  app.use((req, res, next) => {
    console.log('游댢 [CORS DEBUG] Origin:', req.headers.origin);
    console.log('游댢 [CORS DEBUG] Method:', req.method);
    console.log('游댢 [CORS DEBUG] Headers:', req.headers);
    next();
  });

  // Rate limiting
  const limiter = rateLimit({
    windowMs: 15 * 60 * 1000, // 15 minutos
    max: 100, // m치ximo 100 requests por IP
    message: {
      error: 'Muitas tentativas, tente novamente em 15 minutos',
      code: 'RATE_LIMIT_EXCEEDED'
    },
    standardHeaders: true,
    legacyHeaders: false
  });

  // Rate limiting mais restritivo para rotas sens칤veis
  const authLimiter = rateLimit({
    windowMs: 15 * 60 * 1000,
    max: 5, // m치ximo 5 tentativas por IP
    message: {
      error: 'Muitas tentativas de autentica칞칚o, tente novamente em 15 minutos',
      code: 'AUTH_RATE_LIMIT_EXCEEDED'
    }
  });

  // Middlewares globais
  app.use(express.json({ limit: '10mb' }));
  app.use(express.urlencoded({ extended: true }));
  app.use(requestLogger);

  // Rate limiting
  app.use('/api/', limiter);
  app.use('/api/cadastrar-usuario', authLimiter);
  app.use('/api/definir-senha-inicial', authLimiter);

  return { app, authLimiter };
}

module.exports = { createServer };
